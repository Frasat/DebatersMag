@model DebatersMag.Models.Users

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<h4>Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            
            
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input  asp-for="Email" type="email" id="useremail" name="useremail"class="form-control"  /> 
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"  class="control-label"></label>
                <input  asp-for="Password" type="password" id="userpassword" name="userpassword"class="form-control"/> 
                <span asp-validation-for="Password"  class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AddUser">SignUp</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
